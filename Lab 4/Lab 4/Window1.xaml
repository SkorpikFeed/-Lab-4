<Window x:Class="Lab_4.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_4"
        mc:Ignorable="d"
        Title="Yes, No, Cancel" Height="200" Width="500" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="166*"/>
            <ColumnDefinition Width="167*"/>
            <ColumnDefinition Width="167*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="YesButton" Style="{StaticResource RoundButtonStyle}" Content="Yes" HorizontalAlignment="Left" VerticalAlignment="Center" Width="120" Height="40" Click="Yes_Click" Grid.Column="1" Margin="15,0,0,0"/>
        <Button x:Name="NoButton" Style="{StaticResource RoundButtonStyle}" Grid.Column="2" Content="No" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Height="40" Click="No_Click"/>
        <Button x:Name="CancelButton" Style="{StaticResource RoundButtonStyle}" Grid.Column="3" Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Height="40" Click="Cancel_Click"/>

    </Grid>
</Window>